  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <% unless current_page?(root_path) %>
          <% if sender?(current_user) %>
            <li class="nav-item">
              <%= link_to "Nova Amostra", new_sample_path,
                class: "btn btn-outline-primary mx-2 mt-2",
                style:"border-radius: 50px; font-weight: bold;" %>
            </li>
            <li class="nav-item">
              <%= link_to "Amostras", samples_path,
                class: "btn btn-outline-primary mx-2 mt-2",
                style:"border-radius: 50px; font-weight: bold;",
                data: { turbolinks: "false" } %>
            </li>
          <% end %>
          <li class="nav-item">
            <%= link_to "Remessas", batches_path,
              class: "btn btn-outline-primary mx-2 mt-2",
              style:"border-radius: 50px; font-weight: bold;",
              data: { turbolinks: "false" } %>
          </li>
          <% if sender?(current_user) %>
            <li class="nav-item">
              <%= link_to "Pacientes", patients_path,
                class: "btn btn-outline-primary mx-2 mt-2",
                style:"border-radius: 50px; font-weight: bold;" %>
            </li>
          <% end %>
        <% end %>
        <li class="nav-item dropdown">
          <div class="hello-user  dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            <span style="font-size: 13px">Ol√°, <%= current_user.first_name %><br></span>
            <span style="font-size: 13px"><strong>Conta e Acesso</strong>  </span>
          </div>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Meus dados", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Sair", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>

      <% else %>
        <li class="nav-item">
          <%= link_to icon('fas','sign-in-alt', 'Login'), new_user_session_path, 
              style: "color: $primary; padding-right: 10px" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
