<div class="container my-4", style="width: 480px;">
  <h3>Criar uma conta</h3>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="d-flex justify-content-between">
        <%= f.input :first_name,
                    label: 'Nome',
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "first_name" } %>
        <%= f.input :last_name,
                    label: 'Sobrenome',
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "last_name" } %>
      </div>

        <%= f.input :institution,
                    label: 'Instituição',
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "institution" } %>

        <%= f.input :role, collection: ["Cadastro", "Envio", "Recepção"], 
                    label: 'Tipo de acesso',
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "role" } %>

      <div class="d-flex justify-content-between">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>

        <%= f.input :cpf,
                    label: 'CPF',
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "cpf" } %>
      </div>

        <%= f.input :password,
                    label: 'Senha',
                    required: true,
                    hint: ("mínimo #{@minimum_password_length} caracteres" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    label: 'Confirmação de senha',
                    required: true,
                    input_html: { autocomplete: "new-password" } %>

    </div>

    <div class="form-actions">
      <%= f.button :submit, "Criar conta", class: "btn btn-primary mb-3" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>